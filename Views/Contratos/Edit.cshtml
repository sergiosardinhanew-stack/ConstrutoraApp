@model ConstrutoraApp.Models.Contrato

@{
    ViewData["Title"] = "Editar Contrato";
}

<div class="container-fluid">
    <h1><i class="bi bi-pencil"></i> Editar Contrato</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="ImovelId" class="form-label"></label>
                    <select asp-for="ImovelId" class="form-select" asp-items="ViewBag.ImovelId">
                        <option value="">Selecione um imóvel</option>
                    </select>
                    <span asp-validation-for="ImovelId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Comprador" class="form-label"></label>
                        <input asp-for="Comprador" class="form-control" />
                        <span asp-validation-for="Comprador" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CPF_CNPJ" class="form-label"></label>
                        <input asp-for="CPF_CNPJ" class="form-control" />
                        <span asp-validation-for="CPF_CNPJ" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DataContrato" class="form-label"></label>
                        <input asp-for="DataContrato" class="form-control" type="date" />
                        <span asp-validation-for="DataContrato" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorVenda" class="form-label"></label>
                        <input asp-for="ValorVenda" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ValorVenda" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="FormaPagamento" class="form-label"></label>
                    <input asp-for="FormaPagamento" class="form-control" />
                    <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Observacoes" class="form-label"></label>
                    <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Salvar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

