@model ConstrutoraApp.Models.Custo

@{
    ViewData["Title"] = "Editar Custo";
}

<div class="container-fluid">
    <h1><i class="bi bi-pencil"></i> Editar Custo</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="mb-3">
                    <label asp-for="EmpreendimentoId" class="form-label"></label>
                    <select asp-for="EmpreendimentoId" class="form-select" asp-items="ViewBag.EmpreendimentoId">
                        <option value="">Selecione um empreendimento</option>
                    </select>
                    <span asp-validation-for="EmpreendimentoId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Tipo" class="form-label"></label>
                        <select asp-for="Tipo" class="form-select">
                            <option value="">Selecione...</option>
                            <option value="Material">Material</option>
                            <option value="Mão de Obra">Mão de Obra</option>
                            <option value="Imposto">Imposto</option>
                            <option value="Outros">Outros</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Valor" class="form-label"></label>
                        <input asp-for="Valor" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Data" class="form-label">
                            <strong>Data</strong> <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="text" id="Data" name="Data" class="form-control" placeholder="dd/MM/yyyy" maxlength="10" required />
                            <input type="date" id="DataDate" value="@(Model.Data.ToString("yyyy-MM-dd"))" class="form-control" style="position: absolute; left: -9999px; opacity: 0; pointer-events: none;" />
                            <button type="button" class="btn btn-outline-secondary" onclick="abrirCalendario('Data')">
                                <i class="bi bi-calendar"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Data" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Fornecedor" class="form-label"></label>
                        <input asp-for="Fornecedor" class="form-control" />
                        <span asp-validation-for="Fornecedor" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="FormaPagamento" class="form-label">
                        <strong>Forma de Pagamento</strong>
                    </label>
                    <select id="FormaPagamento" asp-for="FormaPagamento" class="form-select">
                        <option value="">Selecione...</option>
                        <option value="PIX">PIX</option>
                        <option value="Débito">Débito</option>
                        <option value="Crédito">Crédito</option>
                        <option value="Boleto">Boleto</option>
                    </select>
                    <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                </div>

                <!-- Campos para Crédito -->
                <div id="camposCredito" style="display: none;">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="NumeroParcelas" class="form-label">
                                <strong>Número de Parcelas</strong>
                            </label>
                            <select id="NumeroParcelas" asp-for="NumeroParcelas" class="form-select">
                                <option value="">Selecione...</option>
                                @for (int i = 1; i <= 12; i++)
                                {
                                    <option value="@i">@i parcela(s)</option>
                                }
                            </select>
                            <span asp-validation-for="NumeroParcelas" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ValorParcela" class="form-label">
                                <strong>Valor da Parcela</strong>
                            </label>
                            <input id="ValorParcela" asp-for="ValorParcela" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="ValorParcela" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DataVencimentoParcela" class="form-label">
                                <strong>Data de Vencimento da Parcela</strong>
                            </label>
                            <div class="input-group">
                                <input type="text" id="DataVencimentoParcela" name="DataVencimentoParcela" class="form-control" placeholder="dd/MM/yyyy" maxlength="10" />
                                <input type="date" id="DataVencimentoParcelaDate" value="@(Model.DataVencimentoParcela.HasValue ? Model.DataVencimentoParcela.Value.ToString("yyyy-MM-dd") : "")" class="form-control" style="position: absolute; left: -9999px; opacity: 0; pointer-events: none;" />
                                <button type="button" class="btn btn-outline-secondary" onclick="abrirCalendario('DataVencimentoParcela')">
                                    <i class="bi bi-calendar"></i>
                                </button>
                            </div>
                            <span asp-validation-for="DataVencimentoParcela" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Campo para Boleto -->
                <div id="campoBoleto" style="display: none;">
                    <div class="mb-3">
                        <label asp-for="DataVencimentoBoleto" class="form-label">
                            <strong>Data de Vencimento do Boleto</strong>
                        </label>
                        <div class="input-group">
                            <input type="text" id="DataVencimentoBoleto" name="DataVencimentoBoleto" class="form-control" placeholder="dd/MM/yyyy" maxlength="10" />
                            <input type="date" id="DataVencimentoBoletoDate" value="@(Model.DataVencimentoBoleto.HasValue ? Model.DataVencimentoBoleto.Value.ToString("yyyy-MM-dd") : "")" class="form-control" style="position: absolute; left: -9999px; opacity: 0; pointer-events: none;" />
                            <button type="button" class="btn btn-outline-secondary" onclick="abrirCalendario('DataVencimentoBoleto')">
                                <i class="bi bi-calendar"></i>
                            </button>
                        </div>
                        <span asp-validation-for="DataVencimentoBoleto" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label">
                        <strong>Status</strong>
                    </label>
                    <select asp-for="Status" class="form-select">
                        <option value="">Selecione...</option>
                        <option value="Pago">Pago</option>
                        <option value="Pendente">Pendente</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-check-circle"></i> Salvar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function abrirCalendario(tipo) {
            var inputTexto = $('#' + tipo);
            var inputDate = $('#' + tipo + 'Date');
            
            var dataTexto = inputTexto.val();
            if (dataTexto) {
                var regex = /^(\d{2})\/(\d{2})\/(\d{4})$/;
                var match = dataTexto.match(regex);
                if (match) {
                    var dia = match[1];
                    var mes = match[2];
                    var ano = match[3];
                    inputDate.val(ano + '-' + mes + '-' + dia);
                }
            } else {
                var hoje = new Date();
                var ano = hoje.getFullYear();
                var mes = String(hoje.getMonth() + 1).padStart(2, '0');
                var dia = String(hoje.getDate()).padStart(2, '0');
                inputDate.val(ano + '-' + mes + '-' + dia);
            }
            
            inputDate.off('change').on('change', function() {
                var dataSelecionada = $(this).val();
                if (dataSelecionada) {
                    var partes = dataSelecionada.split('-');
                    if (partes.length === 3) {
                        var dia = partes[2];
                        var mes = partes[1];
                        var ano = partes[0];
                        inputTexto.val(dia + '/' + mes + '/' + ano);
                    }
                }
                $(this).css('pointer-events', 'none');
            });
            
            inputDate.css('pointer-events', 'auto');
            inputDate.css('position', 'fixed');
            inputDate.css('left', '50%');
            inputDate.css('top', '50%');
            inputDate.css('transform', 'translate(-50%, -50%)');
            inputDate.css('z-index', '9999');
            
            setTimeout(function() {
                if (inputDate[0] && typeof inputDate[0].showPicker === 'function') {
                    inputDate[0].showPicker().catch(function() {
                        inputDate[0].focus();
                        inputDate[0].click();
                    });
                } else {
                    inputDate[0].focus();
                    inputDate[0].click();
                }
                
                setTimeout(function() {
                    inputDate.css('position', 'absolute');
                    inputDate.css('left', '-9999px');
                    inputDate.css('top', 'auto');
                    inputDate.css('transform', 'none');
                    inputDate.css('z-index', 'auto');
                    inputDate.css('pointer-events', 'none');
                }, 100);
            }, 10);
        }

        $(document).ready(function() {
            // Converter data do modelo (yyyy-MM-dd) para formato brasileiro (dd/MM/yyyy) ao carregar
            function converterDataParaBrasileiro(campoId) {
                var inputDate = $('#' + campoId + 'Date');
                var inputTexto = $('#' + campoId);
                
                // Se o campo date tiver valor (do modelo), converter para brasileiro
                if (inputDate.length > 0 && inputDate[0].value) {
                    var partes = inputDate[0].value.split('-');
                    if (partes.length === 3) {
                        var dia = partes[2];
                        var mes = partes[1];
                        var ano = partes[0];
                        inputTexto.val(dia + '/' + mes + '/' + ano);
                    }
                }
            }

            // Converter todas as datas ao carregar
            converterDataParaBrasileiro('Data');
            converterDataParaBrasileiro('DataVencimentoParcela');
            converterDataParaBrasileiro('DataVencimentoBoleto');

            // Máscara de data para todos os campos de data
            $('#Data, #DataVencimentoParcela, #DataVencimentoBoleto').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 2) {
                        value = value;
                    } else if (value.length <= 4) {
                        value = value.substring(0, 2) + '/' + value.substring(2);
                    } else {
                        value = value.substring(0, 2) + '/' + value.substring(2, 4) + '/' + value.substring(4, 8);
                    }
                    $(this).val(value);
                }
            });

            // Converter dd/MM/yyyy para yyyy-MM-dd antes de enviar
            $('form').on('submit', function(e) {
                var camposData = ['Data', 'DataVencimentoParcela', 'DataVencimentoBoleto'];
                var erro = false;
                
                camposData.forEach(function(campo) {
                    var inputTexto = $('#' + campo);
                    var inputDate = $('#' + campo + 'Date');
                    var dataInput = inputTexto.val();
                    
                    if (dataInput) {
                        var regex = /^(\d{2})\/(\d{2})\/(\d{4})$/;
                        var match = dataInput.match(regex);
                        if (match) {
                            var dia = parseInt(match[1], 10);
                            var mes = parseInt(match[2], 10);
                            var ano = parseInt(match[3], 10);
                            
                            if (dia >= 1 && dia <= 31 && mes >= 1 && mes <= 12 && ano >= 1900 && ano <= 2100) {
                                var data = new Date(ano, mes - 1, dia);
                                if (data.getDate() == dia && data.getMonth() == mes - 1 && data.getFullYear() == ano) {
                                    var dataFormatada = ano + '-' + 
                                        (mes < 10 ? '0' + mes : mes) + '-' + 
                                        (dia < 10 ? '0' + dia : dia);
                                    inputDate.val(dataFormatada);
                                    // Criar campo hidden para envio
                                    $('<input>').attr({
                                        type: 'hidden',
                                        name: campo,
                                        value: dataFormatada
                                    }).appendTo('form');
                                    inputTexto.attr('name', campo + 'Texto');
                                } else {
                                    erro = true;
                                    alert('Data de ' + campo + ' inválida. Por favor, verifique o dia, mês e ano.');
                                }
                            } else {
                                erro = true;
                                alert('Data de ' + campo + ' inválida. Por favor, verifique o dia, mês e ano.');
                            }
                        } else {
                            erro = true;
                            alert('Formato de data de ' + campo + ' inválido. Use o formato dd/MM/yyyy.');
                        }
                    } else if (campo === 'Data') {
                        // Data principal é obrigatória
                        erro = true;
                        alert('Por favor, informe a data.');
                    }
                });
                
                if (erro) {
                    e.preventDefault();
                    return false;
                }
            });
            // Função para mostrar/ocultar campos baseado na forma de pagamento
            function atualizarCamposFormaPagamento() {
                var formaPagamento = $('#FormaPagamento').val();
                var camposCredito = $('#camposCredito');
                var campoBoleto = $('#campoBoleto');

                // Ocultar todos os campos primeiro
                camposCredito.hide();
                campoBoleto.hide();

                // Não limpar campos quando ocultados em modo edição para preservar dados existentes

                // Mostrar campos conforme a forma de pagamento
                if (formaPagamento === 'Crédito') {
                    camposCredito.show();
                } else if (formaPagamento === 'Boleto') {
                    campoBoleto.show();
                }
            }

            // Evento quando a forma de pagamento mudar
            $('#FormaPagamento').change(function() {
                atualizarCamposFormaPagamento();
            });

            // Calcular valor da parcela automaticamente
            $('#NumeroParcelas, #Valor').change(function() {
                var valorTotal = parseFloat($('#Valor').val()) || 0;
                var numeroParcelas = parseInt($('#NumeroParcelas').val()) || 0;
                
                if (numeroParcelas > 0 && valorTotal > 0) {
                    var valorParcela = valorTotal / numeroParcelas;
                    $('#ValorParcela').val(valorParcela.toFixed(2));
                }
            });

            // Inicializar campos ao carregar a página
            // Aguardar um pouco para garantir que os valores do modelo foram carregados
            setTimeout(function() {
                atualizarCamposFormaPagamento();
            }, 100);
        });
    </script>
}

