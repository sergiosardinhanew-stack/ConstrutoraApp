@model ConstrutoraApp.Models.Contrato

@{
    ViewData["Title"] = "Novo Contrato";
}

<div class="container-fluid">
    <h1><i class="bi bi-plus-circle"></i> Novo Contrato</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="mb-3">
                    <label for="EmpreendimentoId" class="form-label">
                        <strong>Empreendimento</strong> <span class="text-danger">*</span>
                    </label>
                    <select id="EmpreendimentoId" name="EmpreendimentoId" class="form-select" asp-items="ViewBag.EmpreendimentoId" required>
                        <option value="">Selecione um empreendimento</option>
                    </select>
                    @if (ViewData["EmpreendimentoIdSelecionado"] != null)
                    {
                        <script>
                            $(document).ready(function() {
                                $('#EmpreendimentoId').val('@ViewData["EmpreendimentoIdSelecionado"]');
                            });
                        </script>
                    }
                    <span class="text-danger field-validation-valid" data-valmsg-for="EmpreendimentoId" data-valmsg-replace="true"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImovelId" class="form-label">
                        <strong>Imóvel</strong> <span class="text-danger">*</span>
                    </label>
                    <select asp-for="ImovelId" id="ImovelId" name="ImovelId" class="form-select" required>
                        <option value="">Primeiro selecione um empreendimento</option>
                    </select>
                    <span asp-validation-for="ImovelId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Comprador" class="form-label">
                            <strong>Comprador</strong> <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Comprador" class="form-control" required />
                        <span asp-validation-for="Comprador" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CPF_CNPJ" class="form-label"></label>
                        <input asp-for="CPF_CNPJ" class="form-control" />
                        <span asp-validation-for="CPF_CNPJ" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DataContrato" class="form-label"></label>
                        <input asp-for="DataContrato" class="form-control" type="date" />
                        <span asp-validation-for="DataContrato" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorVenda" class="form-label"></label>
                        <input asp-for="ValorVenda" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ValorVenda" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="FormaPagamento" class="form-label"></label>
                    <input asp-for="FormaPagamento" class="form-control" />
                    <span asp-validation-for="FormaPagamento" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Observacoes" class="form-label"></label>
                    <textarea asp-for="Observacoes" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            // Função para carregar imóveis
            function carregarImoveis(empreendimentoId, imovelIdSelecionado) {
                var imovelSelect = $('#ImovelId');
                
                // Limpar o select de imóveis
                imovelSelect.empty();
                imovelSelect.append('<option value="">Carregando imóveis...</option>');
                imovelSelect.prop('disabled', true);
                imovelSelect.removeAttr('required');
                
                if (empreendimentoId) {
                    // Fazer requisição AJAX para buscar os imóveis do empreendimento
                    $.ajax({
                        url: '@Url.Action("GetImoveisByEmpreendimento", "Contratos")',
                        type: 'GET',
                        data: { empreendimentoId: empreendimentoId },
                        success: function(data) {
                            imovelSelect.empty();
                            if (data && data.length > 0) {
                                imovelSelect.append('<option value="">Selecione um imóvel</option>');
                                $.each(data, function(index, imovel) {
                                    var displayText = imovel.numero + ' - ' + imovel.tipo + ' (' + imovel.status + ')';
                                    var selected = (imovelIdSelecionado && imovel.id == imovelIdSelecionado) ? 'selected' : '';
                                    imovelSelect.append('<option value="' + imovel.id + '" ' + selected + '>' + displayText + '</option>');
                                });
                                imovelSelect.prop('disabled', false);
                                imovelSelect.attr('required', 'required');
                            } else {
                                imovelSelect.append('<option value="">Nenhum imóvel encontrado para este empreendimento</option>');
                                imovelSelect.prop('disabled', true);
                                imovelSelect.removeAttr('required');
                            }
                        },
                        error: function() {
                            imovelSelect.empty();
                            imovelSelect.append('<option value="">Erro ao carregar imóveis</option>');
                            imovelSelect.prop('disabled', true);
                            imovelSelect.removeAttr('required');
                        }
                    });
                } else {
                    imovelSelect.empty();
                    imovelSelect.append('<option value="">Primeiro selecione um empreendimento</option>');
                    imovelSelect.prop('disabled', true);
                    imovelSelect.removeAttr('required');
                }
            }

            // Carregar imóveis quando o empreendimento mudar
            $('#EmpreendimentoId').change(function() {
                var empreendimentoId = $(this).val();
                carregarImoveis(empreendimentoId, null);
            });

            // Se já houver um empreendimento selecionado (em caso de erro de validação), carregar os imóveis
            setTimeout(function() {
                var imovelIdSelecionado = $('#ImovelId').val();
                var empreendimentoSelecionado = $('#EmpreendimentoId').val();
                if (empreendimentoSelecionado && imovelIdSelecionado) {
                    carregarImoveis(empreendimentoSelecionado, imovelIdSelecionado);
                } else if (empreendimentoSelecionado) {
                    carregarImoveis(empreendimentoSelecionado, null);
                }
            }, 100);
        });
    </script>
}

