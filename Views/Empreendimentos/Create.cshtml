@model ConstrutoraApp.Models.Empreendimento

@{
    ViewData["Title"] = "Novo Empreendimento";
}

<div class="container-fluid">
    <h1><i class="bi bi-plus-circle"></i> Novo Empreendimento</h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Tipo" class="form-label"></label>
                        <select asp-for="Tipo" class="form-select">
                            <option value="">Selecione...</option>
                            <option value="Casa">Casa</option>
                            <option value="Edifício">Edifício</option>
                            <option value="Comercial">Comercial</option>
                        </select>
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select">
                            <option value="">Selecione...</option>
                            <option value="Em construção">Em construção</option>
                            <option value="Concluído">Concluído</option>
                            <option value="Vendido">Vendido</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Endereco" class="form-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label"></label>
                    <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DataInicio" class="form-label">
                            <strong>Data de Início</strong> <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input type="text" id="DataInicio" name="DataInicio" class="form-control" placeholder="dd/MM/yyyy" maxlength="10" required />
                            <input type="date" id="DataInicioDate" class="form-control" style="position: absolute; left: -9999px; opacity: 0; pointer-events: none;" />
                            <button type="button" class="btn btn-outline-secondary" onclick="abrirCalendario('DataInicio')">
                                <i class="bi bi-calendar"></i>
                            </button>
                        </div>
                        <span asp-validation-for="DataInicio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="DataEntrega" class="form-label">
                            <strong>Data de Entrega</strong>
                        </label>
                        <div class="input-group">
                            <input type="text" id="DataEntrega" name="DataEntrega" class="form-control" placeholder="dd/MM/yyyy" maxlength="10" />
                            <input type="date" id="DataEntregaDate" class="form-control" style="position: absolute; left: -9999px; opacity: 0; pointer-events: none;" />
                            <button type="button" class="btn btn-outline-secondary" onclick="abrirCalendario('DataEntrega')">
                                <i class="bi bi-calendar"></i>
                            </button>
                        </div>
                        <span asp-validation-for="DataEntrega" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorPrevisto" class="form-label"></label>
                        <input asp-for="ValorPrevisto" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ValorPrevisto" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorRealizado" class="form-label"></label>
                        <input asp-for="ValorRealizado" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="ValorRealizado" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Criar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function abrirCalendario(tipo) {
            var inputTexto = $('#' + tipo);
            var inputDate = $('#' + tipo + 'Date');
            
            var dataTexto = inputTexto.val();
            if (dataTexto) {
                var regex = /^(\d{2})\/(\d{2})\/(\d{4})$/;
                var match = dataTexto.match(regex);
                if (match) {
                    var dia = match[1];
                    var mes = match[2];
                    var ano = match[3];
                    inputDate.val(ano + '-' + mes + '-' + dia);
                }
            } else {
                var hoje = new Date();
                var ano = hoje.getFullYear();
                var mes = String(hoje.getMonth() + 1).padStart(2, '0');
                var dia = String(hoje.getDate()).padStart(2, '0');
                inputDate.val(ano + '-' + mes + '-' + dia);
            }
            
            inputDate.off('change').on('change', function() {
                var dataSelecionada = $(this).val();
                if (dataSelecionada) {
                    var partes = dataSelecionada.split('-');
                    if (partes.length === 3) {
                        var dia = partes[2];
                        var mes = partes[1];
                        var ano = partes[0];
                        inputTexto.val(dia + '/' + mes + '/' + ano);
                    }
                }
                $(this).css('pointer-events', 'none');
            });
            
            inputDate.css('pointer-events', 'auto');
            inputDate.css('position', 'fixed');
            inputDate.css('left', '50%');
            inputDate.css('top', '50%');
            inputDate.css('transform', 'translate(-50%, -50%)');
            inputDate.css('z-index', '9999');
            
            setTimeout(function() {
                if (inputDate[0] && typeof inputDate[0].showPicker === 'function') {
                    inputDate[0].showPicker().catch(function() {
                        inputDate[0].focus();
                        inputDate[0].click();
                    });
                } else {
                    inputDate[0].focus();
                    inputDate[0].click();
                }
                
                setTimeout(function() {
                    inputDate.css('position', 'absolute');
                    inputDate.css('left', '-9999px');
                    inputDate.css('top', 'auto');
                    inputDate.css('transform', 'none');
                    inputDate.css('z-index', 'auto');
                    inputDate.css('pointer-events', 'none');
                }, 100);
            }, 10);
        }

        $(document).ready(function() {
            // Máscara de data para todos os campos de data
            $('#DataInicio, #DataEntrega').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length > 0) {
                    if (value.length <= 2) {
                        value = value;
                    } else if (value.length <= 4) {
                        value = value.substring(0, 2) + '/' + value.substring(2);
                    } else {
                        value = value.substring(0, 2) + '/' + value.substring(2, 4) + '/' + value.substring(4, 8);
                    }
                    $(this).val(value);
                }
            });

            // Converter dd/MM/yyyy para yyyy-MM-dd antes de enviar
            $('form').on('submit', function(e) {
                var camposData = ['DataInicio', 'DataEntrega'];
                var erro = false;
                
                camposData.forEach(function(campo) {
                    var inputTexto = $('#' + campo);
                    var inputDate = $('#' + campo + 'Date');
                    var dataInput = inputTexto.val();
                    
                    if (dataInput) {
                        var regex = /^(\d{2})\/(\d{2})\/(\d{4})$/;
                        var match = dataInput.match(regex);
                        if (match) {
                            var dia = parseInt(match[1], 10);
                            var mes = parseInt(match[2], 10);
                            var ano = parseInt(match[3], 10);
                            
                            if (dia >= 1 && dia <= 31 && mes >= 1 && mes <= 12 && ano >= 1900 && ano <= 2100) {
                                var data = new Date(ano, mes - 1, dia);
                                if (data.getDate() == dia && data.getMonth() == mes - 1 && data.getFullYear() == ano) {
                                    var dataFormatada = ano + '-' + 
                                        (mes < 10 ? '0' + mes : mes) + '-' + 
                                        (dia < 10 ? '0' + dia : dia);
                                    inputDate.val(dataFormatada);
                                    // Criar campo hidden para envio
                                    $('<input>').attr({
                                        type: 'hidden',
                                        name: campo,
                                        value: dataFormatada
                                    }).appendTo('form');
                                    inputTexto.attr('name', campo + 'Texto');
                                } else {
                                    erro = true;
                                    alert('Data de ' + campo + ' inválida. Por favor, verifique o dia, mês e ano.');
                                }
                            } else {
                                erro = true;
                                alert('Data de ' + campo + ' inválida. Por favor, verifique o dia, mês e ano.');
                            }
                        } else {
                            erro = true;
                            alert('Formato de data de ' + campo + ' inválido. Use o formato dd/MM/yyyy.');
                        }
                    } else if (campo === 'DataInicio') {
                        // Data de início é obrigatória
                        erro = true;
                        alert('Por favor, informe a data de início.');
                    }
                });
                
                if (erro) {
                    e.preventDefault();
                    return false;
                }
            });
        });
    </script>
}

