@model ConstrutoraApp.Models.Pagamento

@{
    ViewData["Title"] = "Cancelar Pagamento";
    var entrada = ViewBag.Entrada as ConstrutoraApp.Models.Entrada;
}

<div class="container-fluid">
    <h1><i class="bi bi-x-circle text-warning"></i> Cancelar Pagamento</h1>
    <hr />

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> Tem certeza que deseja cancelar este pagamento? O registro será mantido como pendente.
    </div>

    @if (Model.Parcelamento?.Entrada != null)
    {
        <div class="alert alert-info">
            <strong>Entrada:</strong> @Model.Parcelamento.Entrada.Empreendimento?.Nome
            @if (Model.Parcelamento.Entrada.ImovelId.HasValue)
            {
                <text> - Imóvel: @Model.Parcelamento.Entrada.Imovel?.Numero</text>
            }
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Tipo</dt>
                <dd class="col-sm-9">@(Model.Parcelamento?.TipoPagamento ?? "-")</dd>

                <dt class="col-sm-3">Número da Parcela</dt>
                <dd class="col-sm-9">@Model.NumeroParcela</dd>

                <dt class="col-sm-3">Valor da Parcela</dt>
                <dd class="col-sm-9"><strong class="text-success">R$ @Model.ValorParcela.ToString("N2")</strong></dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @if (Model.Status == "Pago")
                    {
                        <span class="badge bg-success">@Model.Status</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">@Model.Status</span>
                    }
                </dd>

                <dt class="col-sm-3">Data de Vencimento</dt>
                <dd class="col-sm-9">@Model.DataVencimento.ToString("dd/MM/yyyy")</dd>
                
                @if (Model.DataPagamento.HasValue)
                {
                    <dt class="col-sm-3">Data de Pagamento</dt>
                    <dd class="col-sm-9">@Model.DataPagamento.Value.ToString("dd/MM/yyyy")</dd>
                }
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-x-circle"></i> Cancelar Pagamento
                </button>
                @if (Model.Parcelamento?.Entrada != null)
                {
                    <a asp-controller="Entradas" asp-action="Details" asp-route-id="@Model.Parcelamento.Entrada.Id" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                }
            </form>
        </div>
    </div>
</div>

