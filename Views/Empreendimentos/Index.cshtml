@model IEnumerable<ConstrutoraApp.Models.Empreendimento>

@{
    ViewData["Title"] = "Empreendimentos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-building"></i> Empreendimentos</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Novo Empreendimento
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@Html.DisplayFor(modelItem => item.Nome)</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <strong>Tipo:</strong> @Html.DisplayFor(modelItem => item.Tipo)<br>
                                <strong>Status:</strong> 
                                <span class="badge bg-@(item.Status == "Concluído" ? "success" : item.Status == "Em construção" ? "warning" : "info")">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </span><br>
                                <strong>Endereço:</strong> @Html.DisplayFor(modelItem => item.Endereco)<br>
                                <strong>Data Início:</strong> @Html.DisplayFor(modelItem => item.DataInicio)<br>
                                @if (item.DataEntrega.HasValue)
                                {
                                    <strong>Data Entrega:</strong> @Html.DisplayFor(modelItem => item.DataEntrega)<br>
                                }
                                @if (item.ValorPrevisto.HasValue)
                                {
                                    <strong>Valor Previsto:</strong> <text>R$</text> @item.ValorPrevisto.Value.ToString("N2")<br />
                                }
                            </p>
                            
                            @{
                                var imoveisPorEmpreendimento = ViewBag.ImoveisPorEmpreendimento as Dictionary<int, Dictionary<string, int>>;
                                var imoveisPorStatus = imoveisPorEmpreendimento != null && imoveisPorEmpreendimento.ContainsKey(item.Id) 
                                    ? imoveisPorEmpreendimento[item.Id] 
                                    : new Dictionary<string, int>();
                                var totalImoveisEmpreendimento = item.Imoveis?.Count ?? 0;
                            }
                            
                            @if (totalImoveisEmpreendimento > 0)
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <h6 class="text-muted mb-2"><i class="bi bi-house-door"></i> Imóveis por Status</h6>
                                    <div class="d-flex flex-wrap gap-2">
                                        @if (imoveisPorStatus.ContainsKey("Disponível"))
                                        {
                                            <span class="badge bg-info">Disponível: @imoveisPorStatus["Disponível"]</span>
                                        }
                                        @if (imoveisPorStatus.ContainsKey("Reservado"))
                                        {
                                            <span class="badge bg-warning text-dark">Reservado: @imoveisPorStatus["Reservado"]</span>
                                        }
                                        @if (imoveisPorStatus.ContainsKey("Vendido"))
                                        {
                                            <span class="badge bg-success">Vendido: @imoveisPorStatus["Vendido"]</span>
                                        }
                                    </div>
                                    <small class="text-muted">Total: @totalImoveisEmpreendimento imóvel(is)</small>
                                </div>
                            }
                            else
                            {
                                <div class="mt-3 pt-3 border-top">
                                    <small class="text-muted"><i class="bi bi-house-door"></i> Nenhum imóvel cadastrado</small>
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-light">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> Detalhes
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-pencil"></i> Editar
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Nenhum empreendimento cadastrado. 
            <a asp-action="Create" class="alert-link">Criar novo empreendimento</a>
        </div>
    }
</div>

