@model ConstrutoraApp.Models.Contrato

@{
    ViewData["Title"] = "Excluir Contrato";
}

<div class="container-fluid">
    <h1><i class="bi bi-trash text-danger"></i> Excluir Contrato</h1>
    <hr />

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i> Tem certeza que deseja excluir este contrato? Esta ação não pode ser desfeita.
    </div>

    <div class="row">
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Comprador)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Comprador)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Imovel)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Imovel!.Numero)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ValorVenda)</dt>
                <dd class="col-sm-9">R$ @Model.ValorVenda.ToString("N2")</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Excluir
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

