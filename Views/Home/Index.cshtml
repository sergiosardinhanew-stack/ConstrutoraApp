@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid px-2 px-md-3">
    <h4 class="mb-2 mb-md-3">Dashboard</h4>
    
    <div class="row g-2 g-md-3 mb-3">
        <!-- Card: Entradas do Dia -->
        <div class="col-6 col-md-3">
            <div class="card border-success shadow-sm">
                <div class="card-body p-2 p-md-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1 small text-muted">Entradas do Dia</h6>
                            <h5 class="card-title mb-0 text-success">R$ @ViewBag.EntradasDia.ToString("N2")</h5>
                        </div>
                        <div class="text-success" style="font-size: 2rem;">
                            <i class="bi bi-arrow-down-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card: Saídas do Dia -->
        <div class="col-6 col-md-3">
            <div class="card border-warning shadow-sm">
                <div class="card-body p-2 p-md-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1 small text-muted">Saídas do Dia</h6>
                            <h5 class="card-title mb-0 text-warning">R$ @ViewBag.SaidasDia.ToString("N2")</h5>
                        </div>
                        <div class="text-warning" style="font-size: 2rem;">
                            <i class="bi bi-arrow-up-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card: Entradas do Mês -->
        <div class="col-6 col-md-3">
            <div class="card border-success shadow-sm">
                <div class="card-body p-2 p-md-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1 small text-muted">Entradas do Mês</h6>
                            <h5 class="card-title mb-0 text-success">R$ @ViewBag.EntradasMes.ToString("N2")</h5>
                        </div>
                        <div class="text-success" style="font-size: 2rem;">
                            <i class="bi bi-arrow-down-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card: Saídas do Mês -->
        <div class="col-6 col-md-3">
            <div class="card border-warning shadow-sm">
                <div class="card-body p-2 p-md-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-1 small text-muted">Saídas do Mês</h6>
                            <h5 class="card-title mb-0 text-warning">R$ @ViewBag.SaidasMes.ToString("N2")</h5>
                        </div>
                        <div class="text-warning" style="font-size: 2rem;">
                            <i class="bi bi-arrow-up-circle"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards de Menu -->
    <div class="row g-2 g-md-3">
        <!-- Card: Imóveis -->
        <div class="col-6 col-md-3">
            <div class="card border-secondary shadow-sm">
                <div class="card-body text-center p-2 p-md-3">
                    <i class="bi bi-house-door text-secondary" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2 mb-1">Imóveis</h6>
                    <p class="card-text text-muted small mb-2">Gerenciar imóveis</p>
                    <a asp-controller="Imoveis" asp-action="Index" class="btn btn-sm btn-outline-secondary">
                        Acessar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Card: Saídas -->
        <div class="col-6 col-md-3">
            <div class="card border-warning shadow-sm">
                <div class="card-body text-center p-2 p-md-3">
                    <i class="bi bi-arrow-up-circle text-warning" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2 mb-1">Saídas</h6>
                    <p class="card-text text-muted small mb-2">Gerenciar despesas</p>
                    <a asp-controller="Custos" asp-action="Index" class="btn btn-sm btn-outline-warning">
                        Acessar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Card: Criar Parcelas -->
        <div class="col-6 col-md-3">
            <div class="card border-info shadow-sm">
                <div class="card-body text-center p-2 p-md-3">
                    <i class="bi bi-calendar-plus text-info" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2 mb-1">Criar Parcelas</h6>
                    <p class="card-text text-muted small mb-2">Criar parcelamentos</p>
                    <a asp-controller="Entradas" asp-action="Index" class="btn btn-sm btn-outline-info">
                        Acessar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Card: Relatórios -->
        <div class="col-6 col-md-3">
            <div class="card border-dark shadow-sm">
                <div class="card-body text-center p-2 p-md-3">
                    <i class="bi bi-graph-up text-dark" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2 mb-1">Relatórios</h6>
                    <p class="card-text text-muted small mb-2">Análises e relatórios</p>
                    <a asp-controller="Relatorios" asp-action="Index" class="btn btn-sm btn-outline-dark">
                        Acessar <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@media (max-width: 768px) {
        .container-fluid {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }
        .card {
            margin-bottom: 0.5rem;
        }
    }
</style>
